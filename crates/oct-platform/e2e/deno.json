        "format": "deno run -A npm:@biomejs/biome format --write .",
        "check": "deno run -A npm:@biomejs/biome check ."
    },
    "imports": {
        "@playwright/test": "npm:@playwright/test@^1.58.0",
        "@biomejs/biome": "npm:@biomejs/biome@2.3.13"
    },
    "nodeModulesDir": "auto",
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
    }
}
